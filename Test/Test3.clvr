// Test foreach, while, loop, break, continue

function space(int n)
{
    while (n--) {
        log(" ");
    }
}

function showIntResults(int testNo, int exp, int act)
{
    int n;
    if (testNo > 9) {
        n = 19;
    } else {
        n = 20;
    }
   
    log("    Test %i: ", testNo);
    space(n);
    if (exp != act) {
        log("FAIL: exp %i, got %i\n", exp, act);
    } else {
        log("Pass\n");
    }
}

function showFloatResults(int testNo, float exp, float act)
{
    int n;
    if (testNo > 9) {
        n = 19;
    } else {
        n = 20;
    }
   
    log("    Test %i: ", testNo);
    space(n);
    if (exp != act) {
        log("FAIL: exp %f, got %f\n", exp, act);
    } else {
        log("Pass\n");
    }
}

function test()
{
    int i, j;
    float f;
    
    log("\nTest while, break, continue\n");

    log("\nTest Int while\n"); 
    i = 0;
    j = 0;
    while(i < 10) {
        j += i++;
    }
    showIntResults(1, 45, j);

    i = 0;
    j = 0;
    while(i < 10) {
        j += i++;
        if (i == 6) {
            break;
        }
    }
    showIntResults(2, 15, j);

    i = 0;
    j = 0;
    while(i < 10) {
        j += i++;
        if (i > 5) {
            continue;
        }
        ++j;
    }
    showIntResults(3, 50, j);

    log("\nTest Float while\n"); 
    i = 0;
    f = 0;
    while(i < 10) {
        f += Float(i++);
    }
    showFloatResults(4, 45, f);

    i = 0;
    f = 0;
    while(i < 10) {
        f += Float(i++);
        if (i == 6) {
            break;
        }
    }
    showFloatResults(5, 15, f);

    i = 0;
    f = 0;
    while(i < 10) {
        f += Float(i++);
        if (i > 5) {
            continue;
        }
        ++f;
    }
    showFloatResults(6, 50, f);

    log("\nDone\n\n");
}

command test 1 test test;
